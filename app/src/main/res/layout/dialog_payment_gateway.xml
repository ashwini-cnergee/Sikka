<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_color"
    android:orientation="vertical"
    android:padding="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/disp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_rl_padding_left"
            android:layout_marginRight="@dimen/home_rl_padding_right"
            android:paddingLeft="@dimen/dialog_rl_padding_left"
            android:paddingRight="@dimen/dialog_rl_padding_right"
            android:text="Select Payment Gateway option:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_below="@+id/disp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_pg_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_bg"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/tv_payment_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Pay By Atom " />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pg_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/nav_bg"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/tv_payment_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Pay By SubPaisa" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>